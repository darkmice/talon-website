---
import { getLocaleFromUrl, getTranslations, getLocalizedPath } from '../i18n';

interface Props {
  title?: string;
  description?: string;
}

const locale = getLocaleFromUrl(Astro.url);
const t = getTranslations(locale);
const { title = t.meta.title, description = t.meta.description } = Astro.props;
const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const altLocale = locale === 'zh' ? 'en' : 'zh';
const altLang = locale === 'zh' ? 'en-US' : 'zh-CN';
const currentLang = locale === 'zh' ? 'zh-CN' : 'en-US';
const altPath = locale === 'zh'
  ? `/en${Astro.url.pathname}`
  : Astro.url.pathname.replace(/^\/en/, '') || '/';
const altURL = new URL(altPath, Astro.site);
---

<!doctype html>
<html lang={currentLang} class="dark">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <meta name="description" content={description} />

    <!-- Canonical & hreflang -->
    <link rel="canonical" href={canonicalURL.href} />
    <link rel="alternate" hreflang={currentLang} href={canonicalURL.href} />
    <link rel="alternate" hreflang={altLang} href={altURL.href} />
    <link rel="alternate" hreflang="x-default" href={new URL('/', Astro.site).href} />

    <!-- Open Graph -->
    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:url" content={canonicalURL.href} />
    <meta property="og:site_name" content="Talon" />
    <meta property="og:locale" content={currentLang} />
    <meta property="og:locale:alternate" content={altLang} />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />

    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@300;400;500;600;700&display=swap" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:wght,FILL@100..700,0..1&display=swap" rel="stylesheet" />

    <!-- JSON-LD Structured Data -->
    <script type="application/ld+json" set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@type": "SoftwareApplication",
      "name": "Talon",
      "description": description,
      "applicationCategory": "Database",
      "operatingSystem": "Linux, macOS, Windows",
      "offers": {
        "@type": "Offer",
        "price": "0",
        "priceCurrency": "USD"
      },
      "url": canonicalURL.href,
      "inLanguage": currentLang,
    })} />
  </head>
  <body class="bg-[#0a0a0f] text-slate-100 font-display overflow-x-hidden">
    <slot />
  </body>
</html>

<style is:global>
  .cyber-grid {
    background-size: 40px 40px;
    mask-image: radial-gradient(circle at center, black 40%, transparent 100%);
  }
  .text-glow {
    text-shadow: 0 0 20px rgba(124, 58, 237, 0.5);
  }
  .metric-glow {
    text-shadow: 0 0 15px rgba(37, 99, 235, 0.6);
  }
  .bar-fill {
    position: relative;
    overflow: hidden;
  }
  .bar-fill::after {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(90deg, transparent, rgba(255,255,255,0.2), transparent);
    transform: translateX(-100%);
    animation: shimmer 2s infinite;
  }
  @keyframes shimmer {
    100% { transform: translateX(100%); }
  }
  .bento-card {
    background: linear-gradient(145deg, rgba(19, 17, 28, 0.6) 0%, rgba(19, 17, 28, 0.95) 100%);
    backdrop-filter: blur(10px);
    transition: all 0.3s ease;
  }
  .bento-card:hover {
    transform: translateY(-2px);
    box-shadow: 0 10px 40px -10px rgba(55, 19, 236, 0.2);
  }
  .cube-container {
    perspective: 800px;
    width: 60px;
    height: 60px;
  }
  .cube {
    width: 100%;
    height: 100%;
    position: relative;
    transform-style: preserve-3d;
    animation: cube-spin 8s infinite linear;
  }
  .face {
    position: absolute;
    width: 60px;
    height: 60px;
    border: 1px solid #7c3aed;
    background: rgba(124, 58, 237, 0.1);
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 20px;
    color: #fff;
    box-shadow: 0 0 15px rgba(124, 58, 237, 0.3);
  }
  .front  { transform: rotateY(0deg) translateZ(30px); }
  .back   { transform: rotateY(180deg) translateZ(30px); }
  .right  { transform: rotateY(90deg) translateZ(30px); }
  .left   { transform: rotateY(-90deg) translateZ(30px); }
  .top    { transform: rotateX(90deg) translateZ(30px); }
  .bottom { transform: rotateX(-90deg) translateZ(30px); }
  @keyframes cube-spin {
    0% { transform: rotateX(0deg) rotateY(0deg); }
    100% { transform: rotateX(360deg) rotateY(360deg); }
  }
  .sparkline path {
    stroke-dasharray: 1000;
    stroke-dashoffset: 1000;
    animation: dash 3s linear infinite;
  }
  @keyframes dash {
    to { stroke-dashoffset: 0; }
  }
</style>
