---
import { getLocaleFromUrl, getTranslations } from '../i18n';

const locale = getLocaleFromUrl(Astro.url);
const t = getTranslations(locale);
---

<section class="py-24 bg-[#0d0b16]">
  <div class="container mx-auto px-4 max-w-7xl">
    <div class="text-center mb-16">
      <h2 class="text-3xl md:text-5xl font-bold text-white mb-4">{t.comparison.title}</h2>
      <p class="text-slate-400">{t.comparison.subtitle}</p>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 items-center">
      <!-- Traditional Stack -->
      <div class="relative rounded-2xl border border-white/5 bg-surface-dark p-8 opacity-60 hover:opacity-100 transition-opacity">
        <h3 class="text-xl font-bold text-red-400 mb-6 flex items-center gap-2">
          <span class="material-symbols-outlined">warning</span>
          {t.comparison.traditional.title}
        </h3>
        <div class="grid grid-cols-2 gap-4">
          <div class="p-4 rounded bg-surface-lighter border border-dashed border-white/10 text-center">
            <span class="text-xs text-slate-500 block mb-1">{t.comparison.traditional.db}</span>
            <span class="text-sm font-mono text-slate-300">Postgres</span>
          </div>
          <div class="p-4 rounded bg-surface-lighter border border-dashed border-white/10 text-center">
            <span class="text-xs text-slate-500 block mb-1">{t.comparison.traditional.cache}</span>
            <span class="text-sm font-mono text-slate-300">Redis</span>
          </div>
          <div class="p-4 rounded bg-surface-lighter border border-dashed border-white/10 text-center">
            <span class="text-xs text-slate-500 block mb-1">{t.comparison.traditional.search}</span>
            <span class="text-sm font-mono text-slate-300">Elastic</span>
          </div>
          <div class="p-4 rounded bg-surface-lighter border border-dashed border-white/10 text-center">
            <span class="text-xs text-slate-500 block mb-1">{t.comparison.traditional.vector}</span>
            <span class="text-sm font-mono text-slate-300">Pinecone</span>
          </div>
          <div class="col-span-2 p-3 rounded bg-red-900/10 border border-red-500/20 text-center">
            <span class="text-xs text-red-400 font-mono">{t.comparison.traditional.pain}</span>
          </div>
        </div>
      </div>

      <!-- Talon Stack -->
      <div class="relative rounded-2xl border border-primary/50 bg-surface-dark p-8 shadow-[0_0_50px_rgba(55,19,236,0.1)]">
        <div class="absolute -top-3 -right-3">
          <span class="bg-accent text-black text-xs font-bold px-3 py-1 rounded-full uppercase">{t.comparison.talon.recommended}</span>
        </div>
        <h3 class="text-xl font-bold text-primary mb-6 flex items-center gap-2">
          <span class="material-symbols-outlined">check_circle</span>
          {t.comparison.talon.title}
        </h3>
        <div class="relative h-48 rounded-xl bg-gradient-to-br from-primary to-secondary flex items-center justify-center overflow-hidden">
          <div class="text-center z-10">
            <div class="text-5xl font-black text-white mb-2">TALON</div>
            <div class="text-sm text-white/80 font-mono bg-black/20 px-3 py-1 rounded-full inline-block">./talon-server start</div>
          </div>
        </div>
        <div class="mt-4 p-3 rounded bg-primary/10 border border-primary/20 text-center">
          <span class="text-xs text-primary font-mono">{t.comparison.talon.benefit}</span>
        </div>
      </div>
    </div>
  </div>
</section>
