---
import { getLocaleFromUrl, getTranslations } from '../i18n';

const locale = getLocaleFromUrl(Astro.url);
const t = getTranslations(locale);
const ep = t.enginesPage;
---

<section class="relative pt-32 pb-16 flex flex-col items-center justify-center overflow-hidden">
  <div class="absolute inset-0 bg-grid-pattern cyber-grid opacity-10 pointer-events-none"></div>
  <div class="absolute inset-0 bg-radial-glow pointer-events-none"></div>
  <div class="relative z-10 container mx-auto px-4 flex flex-col items-center text-center gap-6 max-w-4xl">
    <div class="inline-flex items-center gap-2 px-3 py-1 rounded-full bg-primary/10 border border-primary/20 text-primary text-xs font-mono font-semibold uppercase tracking-wider">
      <span class="w-2 h-2 rounded-full bg-primary animate-pulse"></span>
      {ep.badge}
    </div>
    <h1 class="text-4xl md:text-6xl lg:text-7xl font-black leading-tight tracking-tighter text-white">
      {ep.title}<br />
      <span class="text-transparent bg-clip-text bg-gradient-to-r from-primary via-blue-400 to-white metric-glow">
        {ep.titleHighlight}
      </span>
    </h1>
    <p class="text-lg text-slate-400 max-w-2xl">{ep.subtitle}</p>
  </div>
</section>

<section class="pb-24 px-4">
  <div class="container mx-auto max-w-7xl">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-12 gap-6 auto-rows-fr">

      <!-- SQL Engine: Point Query Latency -->
      <div class="lg:col-span-8 bento-card rounded-3xl p-8 relative overflow-hidden group">
        <div class="absolute top-0 right-0 p-6 opacity-50">
          <span class="material-symbols-outlined text-6xl text-slate-800">database</span>
        </div>
        <div class="relative z-10 h-full flex flex-col">
          <div class="flex items-center justify-between mb-6">
            <div>
              <h3 class="text-xl font-bold text-white flex items-center gap-2">
                <span class="w-1 h-6 bg-primary rounded-full"></span>
                {ep.sql.title}
              </h3>
              <p class="text-slate-500 text-sm mt-1">{ep.sql.desc}</p>
            </div>
            <div class="px-3 py-1 rounded bg-green-500/10 border border-green-500/20 text-green-400 text-xs font-mono font-bold">
              {ep.sql.badge}
            </div>
          </div>
          <div class="mt-auto space-y-6">
            <div class="relative">
              <div class="flex justify-between text-xs font-mono mb-2">
                <span class="text-white font-bold">{ep.sql.talonLabel}</span>
                <span class="text-primary metric-glow">{ep.sql.talonValue}</span>
              </div>
              <div class="h-8 w-full bg-surface-lighter rounded-md overflow-hidden flex items-center px-2">
                <div class="h-2 bg-primary rounded-full bar-fill" style="width: 5%"></div>
              </div>
            </div>
            <div class="relative opacity-60">
              <div class="flex justify-between text-xs font-mono mb-2">
                <span class="text-slate-400">{ep.sql.pgLabel}</span>
                <span class="text-slate-400">{ep.sql.pgValue}</span>
              </div>
              <div class="h-8 w-full bg-surface-lighter rounded-md overflow-hidden flex items-center px-2">
                <div class="h-2 bg-slate-600 rounded-full" style="width: 95%"></div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Bulk Insert Throughput -->
      <div class="lg:col-span-4 bento-card rounded-3xl p-8 flex flex-col justify-between relative overflow-hidden">
        <div class="absolute inset-0 bg-gradient-to-b from-transparent to-primary/5 pointer-events-none"></div>
        <div>
          <h3 class="text-lg font-bold text-white mb-1">{ep.bulkInsert.title}</h3>
          <p class="text-slate-500 text-xs">{ep.bulkInsert.desc}</p>
        </div>
        <div class="mt-8 text-center">
          <div class="text-5xl font-mono font-bold text-white tracking-tighter metric-glow">
            {ep.bulkInsert.value}
          </div>
          <div class="text-sm text-primary font-mono mt-2">{ep.bulkInsert.unit}</div>
        </div>
        <div class="mt-6 flex items-center gap-2 justify-center">
          <span class="text-xs text-slate-500 bg-surface-lighter px-2 py-1 rounded">Standard Hardware</span>
          <span class="text-xs text-green-400 bg-green-900/20 px-2 py-1 rounded border border-green-500/20">{ep.bulkInsert.badge}</span>
        </div>
      </div>

      <!-- KV + TS stacked card -->
      <div class="lg:col-span-4 lg:row-span-2 bento-card rounded-3xl p-0 flex flex-col">
        <div class="p-6 border-b border-white/5 flex-1 flex flex-col justify-center">
          <div class="flex items-center gap-3 mb-2">
            <span class="material-symbols-outlined text-purple-400">storage</span>
            <h3 class="text-base font-bold text-white">{ep.kv.title}</h3>
          </div>
          <div class="flex items-end gap-2 mt-2">
            <span class="text-4xl font-mono font-bold text-white">{ep.kv.value}<span class="text-2xl text-slate-500">M</span></span>
            <span class="text-xs text-slate-400 mb-2 font-mono">ops/s</span>
          </div>
          <div class="mt-3 h-1.5 w-full bg-surface-lighter rounded-full overflow-hidden">
            <div class="h-full bg-purple-500 w-[85%]"></div>
          </div>
          <p class="text-[10px] text-purple-400 mt-2 font-mono text-right">{ep.kv.badge}</p>
        </div>
        <div class="p-6 flex-1 flex flex-col justify-center bg-surface-lighter/30">
          <div class="flex items-center gap-3 mb-2">
            <span class="material-symbols-outlined text-pink-400">show_chart</span>
            <h3 class="text-base font-bold text-white">{ep.ts.title}</h3>
          </div>
          <div class="flex items-end gap-2 mt-2">
            <span class="text-4xl font-mono font-bold text-white">{ep.ts.value}<span class="text-2xl text-slate-500">K</span></span>
            <span class="text-xs text-slate-400 mb-2 font-mono">pts/s</span>
          </div>
          <div class="mt-3 h-1.5 w-full bg-surface-lighter rounded-full overflow-hidden">
            <div class="h-full bg-pink-500 w-[70%]"></div>
          </div>
          <p class="text-[10px] text-pink-400 mt-2 font-mono text-right">{ep.ts.badge}</p>
        </div>
      </div>

      <!-- Vector & Full-Text Search -->
      <div class="lg:col-span-8 lg:row-span-2 bento-card rounded-3xl p-8 relative overflow-hidden">
        <div class="absolute -right-20 -top-20 w-96 h-96 bg-primary/10 rounded-full blur-3xl pointer-events-none"></div>
        <div class="flex justify-between items-start mb-8">
          <div>
            <h3 class="text-xl font-bold text-white flex items-center gap-2">
              <span class="material-symbols-outlined text-accent">hub</span>
              {ep.vector.title}
            </h3>
            <p class="text-slate-400 text-sm mt-1">{ep.vector.desc}</p>
          </div>
          <div class="flex gap-2">
            <span class="px-2 py-1 rounded bg-slate-800 border border-white/10 text-slate-300 text-xs font-mono">HNSW</span>
            <span class="px-2 py-1 rounded bg-slate-800 border border-white/10 text-slate-300 text-xs font-mono">BM25</span>
          </div>
        </div>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
          <div class="bg-surface-dark/50 rounded-2xl p-6 border border-white/5 relative group hover:border-accent/30 transition-colors">
            <div class="text-xs text-slate-500 font-mono uppercase tracking-wider mb-2">{ep.vector.knnLabel}</div>
            <div class="text-5xl font-mono font-bold text-white mb-2 group-hover:text-accent transition-colors">
              {ep.vector.knnValue}<span class="text-2xl text-slate-500">{ep.vector.knnUnit}</span>
            </div>
            <div class="w-full bg-surface-lighter h-1 mt-4">
              <div class="bg-accent h-1 w-[98%] shadow-[0_0_10px_rgba(0,240,255,0.5)]"></div>
            </div>
            <div class="mt-4 flex justify-between text-xs text-slate-400">
              <span>Recall @ 10</span>
              <span class="text-white">{ep.vector.knnRecall}</span>
            </div>
          </div>
          <div class="bg-surface-dark/50 rounded-2xl p-6 border border-white/5 relative group hover:border-primary/30 transition-colors">
            <div class="text-xs text-slate-500 font-mono uppercase tracking-wider mb-2">{ep.vector.hybridLabel}</div>
            <div class="text-5xl font-mono font-bold text-white mb-2 group-hover:text-primary transition-colors">
              {ep.vector.hybridValue}<span class="text-2xl text-slate-500">{ep.vector.hybridUnit}</span>
            </div>
            <div class="w-full bg-surface-lighter h-1 mt-4">
              <div class="bg-primary h-1 w-[92%] shadow-[0_0_10px_rgba(37,99,235,0.5)]"></div>
            </div>
            <div class="mt-4 flex justify-between text-xs text-slate-400">
              <span>QPS (High Load)</span>
              <span class="text-white">{ep.vector.hybridQps}</span>
            </div>
          </div>
        </div>
        <div class="mt-8 pt-6 border-t border-white/5 flex items-center justify-between text-xs text-slate-500 font-mono">
          <div>DATASET: SIFT1M / GIST1M</div>
          <div>DIMENSIONS: 128 / 768</div>
        </div>
      </div>

      <!-- MQ Publish Rate -->
      <div class="lg:col-span-6 bento-card rounded-3xl p-6 flex items-center justify-between relative overflow-hidden group">
        <div class="absolute right-0 top-0 bottom-0 w-32 bg-gradient-to-l from-orange-500/10 to-transparent pointer-events-none"></div>
        <div>
          <div class="flex items-center gap-2 mb-2">
            <span class="material-symbols-outlined text-orange-400 text-lg">queue</span>
            <h3 class="text-sm font-bold text-white uppercase tracking-wider">{ep.mq.title}</h3>
          </div>
          <div class="text-4xl font-mono font-bold text-white mt-1">{ep.mq.value}<span class="text-xl text-slate-500">K</span></div>
          <div class="text-xs text-orange-400 font-mono mt-1">msg/s</div>
        </div>
        <div class="h-16 w-32 flex items-end justify-between gap-1">
          <div class="w-2 bg-orange-500/30 h-[40%] rounded-t"></div>
          <div class="w-2 bg-orange-500/50 h-[60%] rounded-t"></div>
          <div class="w-2 bg-orange-500/70 h-[30%] rounded-t"></div>
          <div class="w-2 bg-orange-500/90 h-[80%] rounded-t"></div>
          <div class="w-2 bg-orange-500 h-[50%] rounded-t"></div>
          <div class="w-2 bg-orange-400 h-[90%] rounded-t animate-pulse"></div>
        </div>
      </div>

      <!-- Graph Neighbor Query -->
      <div class="lg:col-span-6 bento-card rounded-3xl p-6 flex items-center justify-between relative overflow-hidden group">
        <div class="absolute right-0 top-0 bottom-0 w-32 bg-gradient-to-l from-teal-500/10 to-transparent pointer-events-none"></div>
        <div>
          <div class="flex items-center gap-2 mb-2">
            <span class="material-symbols-outlined text-teal-400 text-lg">share</span>
            <h3 class="text-sm font-bold text-white uppercase tracking-wider">{ep.graph.title}</h3>
          </div>
          <div class="text-4xl font-mono font-bold text-white mt-1">{ep.graph.value}<span class="text-xl text-slate-500">K</span></div>
          <div class="text-xs text-teal-400 font-mono mt-1">{ep.graph.unit}</div>
        </div>
        <div class="relative w-24 h-24 flex items-center justify-center">
          <div class="absolute inset-0 border border-teal-500/20 rounded-full animate-[spin_10s_linear_infinite]"></div>
          <div class="absolute inset-4 border border-teal-500/40 rounded-full animate-[spin_6s_linear_infinite_reverse]"></div>
          <div class="w-2 h-2 bg-teal-500 rounded-full shadow-[0_0_10px_#14b8a6]"></div>
        </div>
      </div>

    </div>

    <!-- Test Environment -->
    <div class="mt-8 border-t border-white/5 pt-6 flex flex-col md:flex-row items-center justify-between gap-4">
      <div class="flex items-center gap-2 text-slate-500 text-xs font-mono">
        <span class="material-symbols-outlined text-sm">science</span>
        {ep.testEnv}
      </div>
      <div class="flex flex-wrap gap-4 text-xs font-mono text-slate-400">
        <span class="bg-surface-lighter px-2 py-1 rounded border border-white/5">{ep.envCpu}</span>
        <span class="bg-surface-lighter px-2 py-1 rounded border border-white/5">{ep.envMode}</span>
        <span class="bg-surface-lighter px-2 py-1 rounded border border-white/5">{ep.envPersist}</span>
        <span class="bg-surface-lighter px-2 py-1 rounded border border-white/5">{ep.envVersion}</span>
      </div>
    </div>
  </div>
</section>
