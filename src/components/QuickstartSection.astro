---
import { getLocaleFromUrl, getTranslations, getLocalizedPath, getDocsUrl } from '../i18n';

const locale = getLocaleFromUrl(Astro.url);
const t = getTranslations(locale);
const qs = t.quickstart;
const p = (path: string) => getLocalizedPath(path, locale);
const docsUrl = getDocsUrl('/guide/getting-started', locale);
---

<main class="flex-grow pt-32 pb-12 relative">
  <div class="absolute inset-0 bg-grid-pattern cyber-grid opacity-20 pointer-events-none"></div>
  <div class="absolute inset-0 bg-radial-glow pointer-events-none"></div>
  <div class="container mx-auto px-4 max-w-7xl relative z-10">
    <div class="flex flex-col lg:flex-row gap-8 min-h-[600px]">

      <!-- Left: Steps -->
      <div class="lg:w-5/12 flex flex-col">
        <div class="mb-8">
          <div class="inline-flex items-center gap-2 px-2 py-0.5 rounded text-[10px] font-mono bg-primary/20 text-primary border border-primary/30 uppercase tracking-wider mb-4">{qs.badge}</div>
          <h1 class="text-3xl font-bold text-white mb-2">{qs.title}</h1>
          <p class="text-slate-400 text-sm">{qs.subtitle}</p>
        </div>
        <div class="space-y-0 relative">
          <!-- Step 1 -->
          <div class="relative pl-12 pb-12 group">
            <div class="absolute left-[23px] top-[48px] bottom-[-24px] w-0.5 bg-gradient-to-b from-primary/80 to-primary/10 z-0"></div>
            <div class="absolute left-0 top-0 w-12 h-12 flex items-center justify-center">
              <div class="w-6 h-6 rounded-full bg-surface-dark border-2 border-primary text-xs font-bold flex items-center justify-center text-white z-10 shadow-[0_0_10px_rgba(55,19,236,0.5)]">1</div>
            </div>
            <h3 class="text-lg font-bold text-white mb-2">{qs.step1.title}</h3>
            <p class="text-slate-400 text-sm mb-4 leading-relaxed">{qs.step1.desc}</p>
            <div class="bg-surface-lighter rounded-lg border border-white/10 p-4">
              <span class="text-xs text-slate-500 font-mono block mb-2">Terminal</span>
              <code class="text-sm font-mono text-slate-300 block bg-black/30 p-2 rounded border border-white/5">curl -fsSL https://talon.dev/install.sh | sh</code>
              <code class="text-sm font-mono text-green-400 block bg-black/30 p-2 rounded border border-white/5 mt-2">./talon-server --start</code>
            </div>
          </div>

          <!-- Step 2 -->
          <div class="relative pl-12 pb-12 group">
            <div class="absolute left-[23px] top-[48px] bottom-[-24px] w-0.5 bg-gradient-to-b from-primary/50 to-primary/10 z-0"></div>
            <div class="absolute left-0 top-0 w-12 h-12 flex items-center justify-center">
              <div class="w-6 h-6 rounded-full bg-surface-dark border-2 border-slate-600 group-hover:border-primary transition-colors text-xs font-bold flex items-center justify-center text-white z-10">2</div>
            </div>
            <h3 class="text-lg font-bold text-white mb-2">{qs.step2.title}</h3>
            <p class="text-slate-400 text-sm mb-4 leading-relaxed">{qs.step2.desc}</p>
            <div class="bg-surface-lighter rounded-lg border border-white/10 p-4">
              <span class="text-xs text-slate-500 font-mono block mb-2">Create Table</span>
              <code class="text-sm font-mono text-purple-300 block bg-black/30 p-2 rounded border border-white/5 whitespace-pre-wrap">CREATE TABLE users (
    id UUID PRIMARY KEY,
    name TEXT,
    embedding VECTOR(1536)
);</code>
            </div>
          </div>

          <!-- Step 3 -->
          <div class="relative pl-12 pb-12 group">
            <div class="absolute left-0 top-0 w-12 h-12 flex items-center justify-center">
              <div class="w-6 h-6 rounded-full bg-surface-dark border-2 border-slate-600 group-hover:border-primary transition-colors text-xs font-bold flex items-center justify-center text-white z-10">3</div>
            </div>
            <h3 class="text-lg font-bold text-white mb-2">{qs.step3.title}</h3>
            <p class="text-slate-400 text-sm mb-4 leading-relaxed">{qs.step3.desc}</p>
            <div class="bg-surface-lighter rounded-lg border border-white/10 p-4">
              <span class="text-xs text-slate-500 font-mono block mb-2">KV & Vector Hybrid</span>
              <code class="text-sm font-mono text-blue-300 block bg-black/30 p-2 rounded border border-white/5 whitespace-pre-wrap">SELECT id, name,
  vector_similarity(embedding, ?) AS score
FROM users
WHERE last_active > NOW() - INTERVAL '1 hour'
ORDER BY score ASC
LIMIT 10;</code>
            </div>
          </div>
        </div>
      </div>

      <!-- Right: Terminal -->
      <div class="lg:w-7/12 flex flex-col">
        <div class="flex-grow bg-[#0d0d12] rounded-xl border border-white/10 shadow-2xl flex flex-col overflow-hidden relative">
          <div class="bg-surface-lighter border-b border-white/5 px-4 py-2 flex items-center justify-between shrink-0">
            <div class="flex gap-2">
              <div class="w-3 h-3 rounded-full bg-red-500/80"></div>
              <div class="w-3 h-3 rounded-full bg-yellow-500/80"></div>
              <div class="w-3 h-3 rounded-full bg-green-500/80"></div>
            </div>
            <div class="text-xs font-mono text-slate-500">talon-cli — bash — 80x24</div>
            <div class="w-8"></div>
          </div>
          <div class="p-6 font-mono text-sm overflow-y-auto flex-grow relative z-10">
            <div class="text-slate-400 mb-2">Last login: Today 10:42:01 on ttys001</div>
            <div class="mb-4">
              <div class="flex gap-2"><span class="text-green-500">user@dev:~$</span><span class="text-slate-100">curl -fsSL https://talon.dev/install.sh | sh</span></div>
              <div class="text-slate-400 mt-1">Downloading Talon v0.1.0...<br/>############################################ 100.0%<br/><span class="text-green-400">✓ Talon installed successfully to /usr/local/bin/talon-server</span></div>
            </div>
            <div class="mb-4">
              <div class="flex gap-2"><span class="text-green-500">user@dev:~$</span><span class="text-slate-100">./talon-server --start</span></div>
              <div class="text-slate-300 mt-1 pl-2 border-l-2 border-slate-700">
                <div><span class="text-blue-400">INFO</span> [System] Initializing storage engine...</div>
                <div><span class="text-blue-400">INFO</span> [Engine] <span class="text-green-400">SQL Engine Ready</span></div>
                <div><span class="text-blue-400">INFO</span> [Engine] <span class="text-green-400">KV Store Ready</span> (fjall backend)</div>
                <div><span class="text-blue-400">INFO</span> [Engine] <span class="text-green-400">Vector Search Ready</span> (HNSW Index loaded)</div>
                <div><span class="text-purple-400">SUCCESS</span> Server listening on 0.0.0.0:8080</div>
              </div>
            </div>
            <div class="mb-4">
              <div class="flex gap-2"><span class="text-green-500">user@dev:~$</span><span class="text-slate-100">talon-cli sql "CREATE TABLE users (id INT PK, name TEXT)"</span></div>
              <div class="text-slate-300 mt-1">CREATE TABLE<br/>Query returned successfully in 0.003ms</div>
            </div>
            <div class="mb-4">
              <div class="flex gap-2"><span class="text-green-500">user@dev:~$</span><span class="text-slate-100">talon-cli query --hybrid</span></div>
              <div class="text-slate-300 mt-1">
                <span class="text-slate-500">&gt; Executing Vector Search...</span><br/>
                <div class="mt-2 border border-slate-700 rounded bg-slate-900/50 p-2">
                  <table class="w-full text-left border-collapse">
                    <thead class="text-slate-500 border-b border-slate-700">
                      <tr><th class="pb-1">id</th><th class="pb-1">name</th><th class="pb-1 text-right">score</th></tr>
                    </thead>
                    <tbody class="text-slate-200">
                      <tr><td class="pt-1 text-xs">a1b2-c3d4...</td><td class="pt-1 text-xs">Alice Agent</td><td class="pt-1 text-right text-green-400 text-xs">0.982</td></tr>
                      <tr><td class="pt-1 text-xs">e5f6-g7h8...</td><td class="pt-1 text-xs">Bob Worker</td><td class="pt-1 text-right text-green-400 text-xs">0.945</td></tr>
                    </tbody>
                  </table>
                </div>
                <div class="text-xs text-slate-500 mt-1">2 rows retrieved in 1.2ms</div>
              </div>
            </div>
            <div class="flex gap-2 items-center">
              <span class="text-green-500">user@dev:~$</span>
              <span class="w-2.5 h-5 bg-slate-400 animate-pulse"></span>
            </div>
          </div>
          <div class="h-8 bg-[#1a1b26] border-t border-white/5 flex items-center px-4 justify-between text-[10px] text-slate-500 font-mono">
            <div class="flex gap-4">
              <span class="text-green-500">● Connected</span>
              <span>CPU: 0.4%</span>
              <span>MEM: 124MB</span>
            </div>
            <div>UTF-8</div>
          </div>
        </div>
      </div>
    </div>

    <!-- Production CTA -->
    <div class="mt-8 mb-16 rounded-2xl bg-gradient-to-r from-surface-dark to-surface-lighter border border-white/10 p-8 md:p-12 relative overflow-hidden text-center md:text-left md:flex md:items-center md:justify-between gap-8">
      <div class="absolute top-0 right-0 w-64 h-64 bg-primary/10 blur-[80px] rounded-full pointer-events-none"></div>
      <div class="relative z-10">
        <h2 class="text-2xl md:text-3xl font-bold text-white mb-2">{qs.production.title}</h2>
        <p class="text-slate-400 max-w-xl">{qs.production.desc}</p>
      </div>
      <div class="relative z-10 flex flex-col sm:flex-row gap-4 mt-6 md:mt-0 shrink-0">
        <a href={docsUrl} target="_blank" rel="noopener" class="h-12 px-6 rounded-lg bg-primary hover:bg-primary/90 text-white font-medium shadow-[0_0_20px_rgba(55,19,236,0.3)] transition-all flex items-center justify-center gap-2">
          <span class="material-symbols-outlined">menu_book</span>
          {qs.production.docsCta}
        </a>
        <a href={p('/sdk')} class="h-12 px-6 rounded-lg bg-surface-dark border border-white/10 text-white font-medium hover:bg-white/5 transition-colors flex items-center justify-center gap-2">
          <span class="material-symbols-outlined">code</span>
          {qs.production.sdkCta}
        </a>
      </div>
    </div>
  </div>
</main>
