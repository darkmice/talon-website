---
import { getLocaleFromUrl, getTranslations } from '../i18n';

const locale = getLocaleFromUrl(Astro.url);
const t = getTranslations(locale);
const iot = t.iotPage;
const p = (path: string) => locale === 'zh' ? path : `/en${path}`;
---

<style>
  .monitor-card { background: rgba(18, 18, 21, 0.8); backdrop-filter: blur(12px); border: 1px solid rgba(255, 255, 255, 0.05); }
  .neon-border { box-shadow: 0 0 5px rgba(16, 185, 129, 0.2), inset 0 0 20px rgba(16, 185, 129, 0.05); }
  .terrain-plane { transform: rotateX(60deg) scale(1.5); background-image: linear-gradient(rgba(16, 185, 129, 0.1) 1px, transparent 1px), linear-gradient(90deg, rgba(16, 185, 129, 0.1) 1px, transparent 1px); background-size: 40px 40px; mask-image: linear-gradient(to bottom, transparent, black 20%, black 80%, transparent); }
</style>

<main class="relative pt-32 pb-12 min-h-screen flex flex-col">
  <div class="absolute inset-0 bg-grid-pattern cyber-grid opacity-30 pointer-events-none"></div>
  <div class="absolute top-0 left-1/2 -translate-x-1/2 w-full h-[500px] pointer-events-none" style="background: radial-gradient(circle at center, rgba(16, 185, 129, 0.08) 0%, rgba(5, 5, 5, 0) 70%);"></div>

  <!-- Header -->
  <div class="container mx-auto px-6 max-w-[1440px] mb-8 relative z-10 flex justify-between items-end">
    <div>
      <div class="flex items-center gap-2 mb-2">
        <span class="px-2 py-0.5 rounded bg-surface-lighter border border-white/10 text-[10px] font-mono text-slate-400 uppercase">Architecture View</span>
        <span class="px-2 py-0.5 rounded bg-emerald-500/10 border border-emerald-500/20 text-[10px] font-mono text-emerald-400 uppercase">Live Stream</span>
      </div>
      <h1 class="text-3xl font-bold text-white mb-1">{iot.title}</h1>
      <p class="text-slate-400 text-sm max-w-xl">{iot.subtitle}</p>
    </div>
    <div class="hidden lg:flex gap-4">
      <div class="text-right">
        <div class="text-xs text-slate-500 font-mono uppercase mb-1">{iot.ingestLabel}</div>
        <div class="text-2xl font-mono font-bold text-emerald-400" style="text-shadow: 0 0 10px rgba(16, 185, 129, 0.5);">{iot.ingestValue}</div>
      </div>
      <div class="h-10 w-px bg-white/10"></div>
      <div class="text-right">
        <div class="text-xs text-slate-500 font-mono uppercase mb-1">{iot.alertsLabel}</div>
        <div class="text-2xl font-mono font-bold text-red-500">{iot.alertsValue}</div>
      </div>
    </div>
  </div>

  <!-- 3-Column Architecture -->
  <div class="container mx-auto px-6 max-w-[1440px] relative z-10 flex-1 flex flex-col gap-6">
    <div class="grid grid-cols-12 gap-6 h-full">
      <!-- Left: Edge / Device Stream -->
      <div class="col-span-12 lg:col-span-3 flex flex-col gap-4">
        <div class="bg-surface-dark border border-white/5 p-4 rounded-xl flex items-center justify-between">
          <div>
            <h3 class="text-sm font-semibold text-white">{iot.streamTitle}</h3>
            <p class="text-xs text-slate-500">{iot.streamSub}</p>
          </div>
          <span class="material-symbols-outlined text-slate-600">router</span>
        </div>
        <div class="flex-1 monitor-card rounded-xl p-5 flex flex-col gap-4 relative overflow-hidden">
          <div class="absolute inset-x-0 bottom-0 h-1 bg-gradient-to-r from-transparent via-emerald-500 to-transparent opacity-50"></div>
          <h3 class="text-sm font-mono text-slate-300 uppercase tracking-wider mb-2">Device Stream</h3>
          <div class="flex-1 overflow-hidden relative">
            <div class="overflow-y-auto font-mono text-[10px] space-y-2 opacity-80">
              <div class="flex gap-2 text-slate-400"><span class="text-emerald-400">[OK]</span> DEV_8821: Temp=42.1C, Lat=34.2</div>
              <div class="flex gap-2 text-slate-400"><span class="text-emerald-400">[OK]</span> DEV_1029: Speed=88km/h</div>
              <div class="flex gap-2 text-slate-400"><span class="text-emerald-400">[OK]</span> DEV_3391: Battery=92%</div>
              <div class="flex gap-2 text-yellow-500"><span class="text-yellow-500">[WARN]</span> DEV_7712: High Latency</div>
              <div class="flex gap-2 text-slate-400"><span class="text-emerald-400">[OK]</span> DEV_5510: Status=Idle</div>
              <div class="flex gap-2 text-slate-400"><span class="text-emerald-400">[OK]</span> DEV_0021: Pressure=102kPa</div>
              <div class="flex gap-2 text-slate-400"><span class="text-emerald-400">[OK]</span> DEV_9918: Temp=41.8C</div>
              <div class="flex gap-2 text-slate-400"><span class="text-emerald-400">[OK]</span> DEV_1123: Loc_Update</div>
            </div>
          </div>
          <div class="mt-auto pt-4 border-t border-white/5">
            <div class="flex justify-between items-end">
              <span class="text-xs text-slate-500">Connected</span>
              <span class="text-xl font-mono text-white">842k</span>
            </div>
            <div class="w-full bg-surface-lighter h-1.5 rounded-full mt-2 overflow-hidden">
              <div class="h-full bg-emerald-500 w-[85%]"></div>
            </div>
          </div>
        </div>
      </div>

      <!-- Arrow -->
      <div class="hidden lg:flex col-span-1 items-center justify-center relative">
        <div class="w-full h-px bg-white/10 absolute"></div>
        <div class="w-full h-1 bg-gradient-to-r from-transparent via-emerald-500/50 to-transparent absolute animate-pulse"></div>
        <div class="z-10 bg-surface-dark border border-white/10 rounded-full p-2">
          <span class="material-symbols-outlined text-emerald-400 text-xl">arrow_forward</span>
        </div>
      </div>

      <!-- Center: MQ + Talon Core -->
      <div class="col-span-12 lg:col-span-4 flex flex-col gap-4">
        <div class="monitor-card rounded-xl p-5 border-l-4 border-l-purple-500">
          <div class="flex justify-between items-start mb-4">
            <div>
              <h3 class="text-sm font-bold text-white">{iot.mqTitle}</h3>
              <p class="text-[10px] text-slate-400 font-mono">{iot.mqSub}</p>
            </div>
            <span class="material-symbols-outlined text-purple-400">layers</span>
          </div>
          <div class="grid grid-cols-2 gap-4">
            <div class="bg-surface-lighter/50 p-2 rounded">
              <div class="text-[10px] text-slate-500 uppercase">Lag</div>
              <div class="text-lg font-mono text-white">2ms</div>
            </div>
            <div class="bg-surface-lighter/50 p-2 rounded">
              <div class="text-[10px] text-slate-500 uppercase">Partitions</div>
              <div class="text-lg font-mono text-white">128</div>
            </div>
          </div>
        </div>
        <div class="flex justify-center -my-2 z-10">
          <span class="material-symbols-outlined text-slate-600">arrow_downward</span>
        </div>
        <div class="flex-1 monitor-card rounded-xl p-0 overflow-hidden border border-emerald-500/20 neon-border flex flex-col">
          <div class="p-4 bg-surface-lighter/80 border-b border-white/5 flex justify-between items-center">
            <h3 class="text-sm font-bold text-white flex items-center gap-2">
              <span class="w-2 h-2 rounded-full bg-emerald-500 animate-pulse"></span>
              {iot.engineTitle}
            </h3>
            <div class="flex gap-2">
              <span class="px-1.5 py-0.5 rounded text-[9px] font-mono bg-blue-500/10 text-blue-400 border border-blue-500/20">TSDB</span>
              <span class="px-1.5 py-0.5 rounded text-[9px] font-mono bg-pink-500/10 text-pink-400 border border-pink-500/20">GEO</span>
            </div>
          </div>
          <div class="p-5 flex-1 flex flex-col justify-center relative">
            <svg class="w-full h-24 overflow-visible" preserveAspectRatio="none" viewBox="0 0 100 50">
              <defs>
                <linearGradient id="iotGrad" x1="0" x2="0" y1="0" y2="1">
                  <stop offset="0%" stop-color="#10b981" stop-opacity="0.4"></stop>
                  <stop offset="100%" stop-color="#10b981" stop-opacity="0"></stop>
                </linearGradient>
              </defs>
              <path d="M0,45 Q10,35 20,40 T40,20 T60,25 T80,10 T100,15 L100,50 L0,50 Z" fill="url(#iotGrad)" stroke="none"></path>
              <path d="M0,45 Q10,35 20,40 T40,20 T60,25 T80,10 T100,15" fill="none" stroke="#10b981" stroke-width="0.5"></path>
              <circle class="animate-pulse" cx="100" cy="15" fill="#fff" r="1.5"></circle>
            </svg>
            <div class="flex justify-between text-[10px] font-mono text-slate-500 mt-2 px-1">
              <span>-60s</span>
              <span class="text-emerald-400">Current: 353K pts/s</span>
            </div>
          </div>
          <div class="grid grid-cols-2 border-t border-white/5 divide-x divide-white/5">
            <div class="p-4 bg-surface-lighter/30">
              <div class="flex items-center gap-2 mb-1">
                <span class="material-symbols-outlined text-xs text-blue-400">functions</span>
                <span class="text-[10px] text-slate-400 font-mono uppercase">{iot.stats.avgLatency}</span>
              </div>
              <div class="text-xl font-bold text-white">{iot.stats.avgLatencyValue}<span class="text-sm text-slate-500 font-normal ml-1">ms</span></div>
            </div>
            <div class="p-4 bg-surface-lighter/30">
              <div class="flex items-center gap-2 mb-1">
                <span class="material-symbols-outlined text-xs text-orange-400">bolt</span>
                <span class="text-[10px] text-slate-400 font-mono uppercase">{iot.stats.batchQps}</span>
              </div>
              <div class="text-xl font-bold text-white">{iot.stats.batchQpsValue}<span class="text-sm text-slate-500 font-normal ml-1">kWh</span></div>
            </div>
          </div>
        </div>
      </div>

      <!-- Arrow -->
      <div class="hidden lg:flex col-span-1 items-center justify-center relative">
        <div class="w-full h-px bg-white/10 absolute"></div>
        <div class="w-full h-1 bg-gradient-to-r from-transparent via-emerald-500/50 to-transparent absolute animate-pulse"></div>
        <div class="z-10 bg-surface-dark border border-white/10 rounded-full p-2">
          <span class="material-symbols-outlined text-emerald-400 text-xl">arrow_forward</span>
        </div>
      </div>

      <!-- Right: Geofencing -->
      <div class="col-span-12 lg:col-span-3 flex flex-col gap-4">
        <div class="bg-surface-dark border border-white/5 p-4 rounded-xl flex items-center justify-between">
          <div>
            <h3 class="text-sm font-semibold text-white">App Layer</h3>
            <p class="text-xs text-slate-500">Real-time Dashboard</p>
          </div>
          <span class="material-symbols-outlined text-slate-600">monitor</span>
        </div>
        <div class="flex-1 monitor-card rounded-xl overflow-hidden relative border border-white/10">
          <div class="absolute top-0 left-0 right-0 p-4 z-20 flex justify-between items-start bg-gradient-to-b from-black/80 to-transparent">
            <h3 class="text-xs font-bold text-white uppercase tracking-wider flex items-center gap-2">
              <span class="material-symbols-outlined text-sm text-pink-500">location_on</span>
              {iot.geoTitle}
            </h3>
            <span class="px-1.5 py-0.5 rounded bg-red-500/20 text-red-400 border border-red-500/20 text-[9px] font-bold animate-pulse">ALERT ACTIVE</span>
          </div>
          <div class="absolute inset-0 bg-[#08080a] overflow-hidden flex items-center justify-center" style="perspective: 1000px; transform-style: preserve-3d;">
            <div class="terrain-plane absolute inset-0 w-full h-full"></div>
            <div class="absolute w-32 h-32 rounded-full border-2 border-emerald-500/30 bg-emerald-500/5 top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 shadow-[0_0_30px_rgba(16,185,129,0.1)]"></div>
            <div class="absolute w-48 h-48 rounded-full border border-dashed border-white/20 top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2"></div>
            <div class="absolute top-[40%] left-[45%] w-1.5 h-1.5 bg-white rounded-full shadow-[0_0_10px_white]"></div>
            <div class="absolute top-[60%] left-[60%] w-1.5 h-1.5 bg-emerald-500 rounded-full shadow-[0_0_10px_#10b981]"></div>
            <div class="absolute top-[25%] left-[25%]">
              <div class="w-2 h-2 bg-red-500 rounded-full animate-ping absolute"></div>
              <div class="w-2 h-2 bg-red-500 rounded-full relative z-10"></div>
              <div class="absolute left-4 top-0 bg-red-900/90 text-white text-[9px] p-1.5 rounded border border-red-500/50 whitespace-nowrap backdrop-blur-sm">Zone Violation! <br/> ID: #9921</div>
            </div>
          </div>
          <div class="absolute bottom-0 left-0 right-0 p-4 z-20 bg-gradient-to-t from-black/90 to-transparent border-t border-white/5">
            <div class="grid grid-cols-2 gap-2">
              <div>
                <div class="text-[9px] text-slate-400 uppercase">Active Zones</div>
                <div class="text-sm font-mono text-white">42</div>
              </div>
              <div class="text-right">
                <div class="text-[9px] text-slate-400 uppercase">Processing Time</div>
                <div class="text-sm font-mono text-emerald-400">0.8ms</div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Bottom Legend -->
    <div class="container mx-auto max-w-[1440px] mt-4 relative z-10">
      <div class="grid grid-cols-1 md:grid-cols-4 gap-4 p-4 bg-surface-dark border border-white/5 rounded-lg">
        {iot.bottomBar.map((label: string, i: number) => (
          <div class="flex items-center gap-3">
            {i === 0 && <div class="w-2 h-2 bg-emerald-500 rounded-full shadow-[0_0_8px_#10b981]"></div>}
            {i === 1 && <div class="w-2 h-2 bg-red-500 rounded-full shadow-[0_0_8px_#ef4444]"></div>}
            {i === 2 && <div class="w-2 h-2 bg-purple-500 rounded-full"></div>}
            {i === 3 && <div class="h-0.5 w-6 bg-blue-400"></div>}
            <span class="text-xs text-slate-300">{label}</span>
          </div>
        ))}
      </div>
    </div>
  </div>
</main>
