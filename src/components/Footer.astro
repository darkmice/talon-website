---
import { getLocaleFromUrl, getTranslations } from '../i18n';

const locale = getLocaleFromUrl(Astro.url);
const t = getTranslations(locale);
const p = (path: string) => locale === 'zh' ? path : `/en${path}`;
---

<footer class="bg-[#050508] border-t border-white/10 pt-16 pb-8">
  <div class="container mx-auto px-4 max-w-7xl">
    <div class="grid grid-cols-1 md:grid-cols-4 gap-12 mb-16">
      <div class="col-span-1">
        <a href={p('/')} class="flex items-center gap-2 mb-6">
          <div class="w-6 h-6 text-primary">
            <svg class="w-full h-full" fill="none" viewBox="0 0 48 48" xmlns="http://www.w3.org/2000/svg">
              <path d="M24 4C25.7818 14.2173 33.7827 22.2182 44 24C33.7827 25.7818 25.7818 33.7827 24 44C22.2182 33.7827 14.2173 25.7818 4 24C14.2173 22.2182 22.2182 14.2173 24 4Z" fill="currentColor" />
            </svg>
          </div>
          <h2 class="text-white text-lg font-bold">Talon</h2>
        </a>
        <p class="text-slate-500 text-sm mb-6">{t.footer.tagline}</p>
        <div class="flex gap-4">
          <a class="text-slate-400 hover:text-white transition-colors" href="#" aria-label="Twitter">
            <svg aria-hidden="true" class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24"><path d="M8.29 20.251c7.547 0 11.675-6.253 11.675-11.675 0-.178 0-.355-.012-.53A8.348 8.348 0 0022 5.92a8.19 8.19 0 01-2.357.646 4.118 4.118 0 001.804-2.27 8.224 8.224 0 01-2.605.996 4.107 4.107 0 00-6.993 3.743 11.65 11.65 0 01-8.457-4.287 4.106 4.106 0 001.27 5.477A4.072 4.072 0 012.8 9.713v.052a4.105 4.105 0 003.292 4.022 4.095 4.095 0 01-1.853.07 4.108 4.108 0 003.834 2.85A8.233 8.233 0 012 18.407a11.616 11.616 0 006.29 1.84" /></svg>
          </a>
          <a class="text-slate-400 hover:text-white transition-colors" href="https://github.com/darkmice/talon" aria-label="GitHub">
            <svg aria-hidden="true" class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24"><path clip-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" fill-rule="evenodd" /></svg>
          </a>
        </div>
      </div>

      <div>
        <h3 class="text-white font-bold mb-4">{t.footer.product}</h3>
        <ul class="space-y-2">
          <li><a class="text-slate-400 hover:text-primary transition-colors text-sm" href={p('/download')}>{t.footer.productLinks.download}</a></li>
          <li><a class="text-slate-400 hover:text-primary transition-colors text-sm" href={p('/quickstart')}>{t.footer.productLinks.docs}</a></li>
          <li><a class="text-slate-400 hover:text-primary transition-colors text-sm" href={p('/sdk')}>{t.footer.productLinks.integrations}</a></li>
          <li><a class="text-slate-400 hover:text-primary transition-colors text-sm" href={p('/features')}>{t.footer.productLinks.changelog}</a></li>
        </ul>
      </div>

      <div>
        <h3 class="text-white font-bold mb-4">{t.footer.useCases}</h3>
        <ul class="space-y-2">
          <li><a class="text-slate-400 hover:text-primary transition-colors text-sm" href={p('/use-cases/ai-memory')}>{t.footer.useCaseLinks.agentMemory}</a></li>
          <li><a class="text-slate-400 hover:text-primary transition-colors text-sm" href={p('/use-cases/rag')}>{t.footer.useCaseLinks.ragPipeline}</a></li>
          <li><a class="text-slate-400 hover:text-primary transition-colors text-sm" href={p('/use-cases/iot')}>{t.footer.useCaseLinks.analytics}</a></li>
          <li><a class="text-slate-400 hover:text-primary transition-colors text-sm" href={p('/use-cases/knowledge-graph')}>{t.footer.useCaseLinks.knowledgeGraph}</a></li>
        </ul>
      </div>

      <div>
        <h3 class="text-white font-bold mb-4">{t.footer.company}</h3>
        <ul class="space-y-2">
          <li><a class="text-slate-400 hover:text-primary transition-colors text-sm" href={p('/platform')}>{t.footer.companyLinks.about}</a></li>
          <li><a class="text-slate-400 hover:text-primary transition-colors text-sm" href="#">{t.footer.companyLinks.careers}</a></li>
          <li><a class="text-slate-400 hover:text-primary transition-colors text-sm" href="#">{t.footer.companyLinks.blog}</a></li>
          <li><a class="text-slate-400 hover:text-primary transition-colors text-sm" href="#">{t.footer.companyLinks.contact}</a></li>
        </ul>
      </div>
    </div>

    <div class="flex flex-col md:flex-row justify-between items-center border-t border-white/5 pt-8">
      <p class="text-slate-500 text-sm">{t.footer.copyright}</p>
      <div class="flex gap-6 mt-4 md:mt-0">
        <a class="text-slate-500 hover:text-white text-sm" href="#">{t.footer.privacy}</a>
        <a class="text-slate-500 hover:text-white text-sm" href="#">{t.footer.terms}</a>
        <a class="text-slate-500 hover:text-white text-sm" href="#">{t.footer.security}</a>
      </div>
    </div>
  </div>
</footer>
