---
import { getLocaleFromUrl, getTranslations, getLocalizedPath } from '../i18n';

const locale = getLocaleFromUrl(Astro.url);
const t = getTranslations(locale);
const p = (path: string) => getLocalizedPath(path, locale);
---

<section class="py-24 bg-[#0a0a0f] border-t border-white/5">
  <div class="container mx-auto px-4 max-w-7xl">
    <div class="flex flex-col md:flex-row justify-between items-end mb-12">
      <div>
        <h2 class="text-3xl font-bold text-white mb-2">{t.features.title}</h2>
        <p class="text-slate-400">{t.features.subtitle}</p>
      </div>
      <a class="text-primary hover:text-white transition-colors flex items-center gap-2 mt-4 md:mt-0 group" href={p('/use-cases')}>
        {t.features.exploreAll}
        <span class="material-symbols-outlined group-hover:translate-x-1 transition-transform">arrow_forward</span>
      </a>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      <div class="p-6 rounded-2xl bg-surface-lighter hover:bg-surface-lighter/80 transition-colors border border-white/5">
        <div class="w-12 h-12 rounded-full bg-gradient-to-br from-purple-500 to-blue-600 flex items-center justify-center text-white mb-6 shadow-lg shadow-purple-500/20">
          <span class="material-symbols-outlined">memory</span>
        </div>
        <h3 class="text-xl font-bold text-white mb-3">{t.features.memory.title}</h3>
        <p class="text-slate-400 text-sm leading-relaxed">{t.features.memory.desc}</p>
      </div>

      <div class="p-6 rounded-2xl bg-surface-lighter hover:bg-surface-lighter/80 transition-colors border border-white/5">
        <div class="w-12 h-12 rounded-full bg-gradient-to-br from-blue-500 to-cyan-400 flex items-center justify-center text-white mb-6 shadow-lg shadow-blue-500/20">
          <span class="material-symbols-outlined">manage_accounts</span>
        </div>
        <h3 class="text-xl font-bold text-white mb-3">{t.features.session.title}</h3>
        <p class="text-slate-400 text-sm leading-relaxed">{t.features.session.desc}</p>
      </div>

      <div class="p-6 rounded-2xl bg-surface-lighter hover:bg-surface-lighter/80 transition-colors border border-white/5">
        <div class="w-12 h-12 rounded-full bg-gradient-to-br from-cyan-400 to-green-400 flex items-center justify-center text-white mb-6 shadow-lg shadow-cyan-500/20">
          <span class="material-symbols-outlined">psychology</span>
        </div>
        <h3 class="text-xl font-bold text-white mb-3">{t.features.rag.title}</h3>
        <p class="text-slate-400 text-sm leading-relaxed">{t.features.rag.desc}</p>
      </div>
    </div>
  </div>
</section>
