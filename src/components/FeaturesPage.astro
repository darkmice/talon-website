---
import { getLocaleFromUrl, getTranslations } from '../i18n';

const locale = getLocaleFromUrl(Astro.url);
const t = getTranslations(locale);
const ft = t.featuresPage;
const p = (path: string) => locale === 'zh' ? path : `/en${path}`;
---

<style>
  .tech-card { background: #151520; border: 1px solid rgba(255,255,255,0.08); transition: all 0.3s ease; }
  .tech-card:hover { border-color: rgba(55, 19, 236, 0.4); box-shadow: 0 4px 20px rgba(55, 19, 236, 0.1); }
  .storage-layer { position: relative; background: rgba(19, 17, 28, 0.8); border: 1px solid rgba(124, 58, 237, 0.3); box-shadow: 0 0 15px rgba(124, 58, 237, 0.1); }
</style>

<section class="relative pt-32 pb-20 border-b border-white/5">
  <div class="absolute inset-0 bg-grid-pattern cyber-grid opacity-10 pointer-events-none"></div>
  <div class="container mx-auto px-4 text-center max-w-4xl relative z-10">
    <h1 class="text-4xl md:text-6xl font-black mb-6 tracking-tight bg-clip-text text-transparent bg-gradient-to-r from-white via-slate-200 to-slate-400">{ft.title}</h1>
    <p class="text-lg text-slate-400 max-w-2xl mx-auto leading-relaxed">{ft.subtitle}</p>
  </div>
</section>

<main class="container mx-auto px-4 py-16 max-w-7xl">
  <!-- SQL & Transaction Engine -->
  <div class="mb-20">
    <div class="flex items-center gap-4 mb-8 border-b border-white/10 pb-4">
      <span class="material-symbols-outlined text-blue-500 text-3xl">database</span>
      <h2 class="text-2xl font-bold text-white">{ft.sql.section}</h2>
      <span class="ml-auto text-xs font-mono text-blue-500 bg-blue-500/10 px-2 py-1 rounded">{ft.sql.badge}</span>
    </div>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
      <div class="tech-card rounded-xl p-6 relative overflow-hidden group">
        <div class="absolute top-0 right-0 p-4 opacity-10 group-hover:opacity-20 transition-opacity">
          <span class="material-symbols-outlined text-4xl">table_chart</span>
        </div>
        <h3 class="text-lg font-bold text-white mb-2">{ft.sql.ddl.title}</h3>
        <p class="text-sm text-slate-400 mb-4">{ft.sql.ddl.desc}</p>
        <div class="bg-black/50 rounded p-3 border border-white/5">
          <code class="text-xs font-mono text-green-400">{ft.sql.code}</code>
        </div>
      </div>
      <div class="tech-card rounded-xl p-6 relative overflow-hidden group">
        <div class="absolute top-0 right-0 p-4 opacity-10 group-hover:opacity-20 transition-opacity">
          <span class="material-symbols-outlined text-4xl">join_inner</span>
        </div>
        <h3 class="text-lg font-bold text-white mb-2">{ft.sql.joins.title}</h3>
        <p class="text-sm text-slate-400 mb-4">{ft.sql.joins.desc}</p>
        <ul class="text-xs text-slate-500 font-mono space-y-1 mt-2">
          {ft.sql.joinTypes.map((jt: string) => <li>â€¢ {jt}</li>)}
        </ul>
      </div>
      <div class="tech-card rounded-xl p-6 relative overflow-hidden group">
        <div class="absolute top-0 right-0 p-4 opacity-10 group-hover:opacity-20 transition-opacity">
          <span class="material-symbols-outlined text-4xl">lock</span>
        </div>
        <h3 class="text-lg font-bold text-white mb-2">{ft.sql.acid.title}</h3>
        <p class="text-sm text-slate-400 mb-4">{ft.sql.acid.desc}</p>
        <div class="flex items-center gap-2 mt-4">
          <span class="px-2 py-1 rounded bg-green-900/20 text-green-400 text-xs font-mono border border-green-500/20">COMMIT</span>
          <span class="px-2 py-1 rounded bg-red-900/20 text-red-400 text-xs font-mono border border-red-500/20">ROLLBACK</span>
        </div>
      </div>
    </div>
  </div>

  <!-- Vector & Full-Text Search -->
  <div class="mb-20">
    <div class="flex items-center gap-4 mb-8 border-b border-white/10 pb-4">
      <span class="material-symbols-outlined text-purple-500 text-3xl">manage_search</span>
      <h2 class="text-2xl font-bold text-white">{ft.search.section}</h2>
      <span class="ml-auto text-xs font-mono text-purple-500 bg-purple-500/10 px-2 py-1 rounded">{ft.search.badge}</span>
    </div>
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
      <div class="tech-card rounded-xl p-8 border-l-4 border-l-purple-500">
        <h3 class="text-xl font-bold text-white mb-4">{ft.search.hybrid.title}</h3>
        <p class="text-slate-400 text-sm mb-6">{ft.search.hybrid.desc}</p>
        <div class="grid grid-cols-2 gap-4">
          <div class="bg-surface-lighter p-4 rounded border border-white/5">
            <h4 class="text-purple-400 font-mono text-sm mb-2">{ft.search.vectorLabel}</h4>
            <div class="text-xs text-slate-500">{ft.search.vectorSub1}</div>
            <div class="text-xs text-slate-500">{ft.search.vectorSub2}</div>
          </div>
          <div class="bg-surface-lighter p-4 rounded border border-white/5">
            <h4 class="text-blue-400 font-mono text-sm mb-2">{ft.search.ftsLabel}</h4>
            <div class="text-xs text-slate-500">{ft.search.ftsSub1}</div>
            <div class="text-xs text-slate-500">{ft.search.ftsSub2}</div>
          </div>
        </div>
      </div>
      <div class="grid grid-cols-1 gap-6">
        <div class="tech-card rounded-xl p-5 flex items-center justify-between">
          <div>
            <h4 class="font-bold text-white text-sm">{ft.search.hnsw.title}</h4>
            <p class="text-xs text-slate-400 mt-1">{ft.search.hnsw.desc}</p>
          </div>
          <div class="text-right">
            <div class="text-2xl font-mono text-accent">{ft.search.hnsw.value}</div>
            <div class="text-[10px] text-slate-500 uppercase">{ft.search.hnsw.label}</div>
          </div>
        </div>
        <div class="tech-card rounded-xl p-5 flex items-center justify-between">
          <div>
            <h4 class="font-bold text-white text-sm">{ft.search.filter.title}</h4>
            <p class="text-xs text-slate-400 mt-1">{ft.search.filter.desc}</p>
          </div>
          <div class="text-right">
            <div class="text-2xl font-mono text-green-400">{ft.search.filter.value}</div>
            <div class="text-[10px] text-slate-500 uppercase">{ft.search.filter.label}</div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- AI Native -->
  <div class="mb-20">
    <div class="flex items-center gap-4 mb-8 border-b border-white/10 pb-4">
      <span class="material-symbols-outlined text-accent text-3xl">psychology</span>
      <h2 class="text-2xl font-bold text-white">{ft.ai.section}</h2>
      <span class="ml-auto text-xs font-mono text-accent bg-accent/10 px-2 py-1 rounded">{ft.ai.badge}</span>
    </div>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
      <div class="tech-card rounded-xl p-6 group hover:bg-accent/5">
        <div class="w-10 h-10 rounded bg-accent/10 flex items-center justify-center text-accent mb-4">
          <span class="material-symbols-outlined">forum</span>
        </div>
        <h3 class="text-lg font-bold text-white mb-2">{ft.ai.sessions.title}</h3>
        <p class="text-sm text-slate-400 mb-4">{ft.ai.sessions.desc}</p>
        <div class="w-full bg-background-dark h-1 rounded overflow-hidden"><div class="bg-accent h-full w-3/4"></div></div>
        <div class="flex justify-between mt-2 text-[10px] font-mono text-slate-500">
          <span>{ft.ai.sessionsBar1}</span><span>{ft.ai.sessionsBar2}</span>
        </div>
      </div>
      <div class="tech-card rounded-xl p-6 group hover:bg-accent/5">
        <div class="w-10 h-10 rounded bg-accent/10 flex items-center justify-center text-accent mb-4">
          <span class="material-symbols-outlined">memory</span>
        </div>
        <h3 class="text-lg font-bold text-white mb-2">{ft.ai.memory.title}</h3>
        <p class="text-sm text-slate-400 mb-4">{ft.ai.memory.desc}</p>
        <div class="flex gap-2 mt-2">
          {ft.ai.memoryTags.map((tag: string) => <span class="text-[10px] border border-white/10 px-2 py-1 rounded text-slate-300">{tag}</span>)}
        </div>
      </div>
      <div class="tech-card rounded-xl p-6 group hover:bg-accent/5">
        <div class="w-10 h-10 rounded bg-accent/10 flex items-center justify-center text-accent mb-4">
          <span class="material-symbols-outlined">data_usage</span>
        </div>
        <h3 class="text-lg font-bold text-white mb-2">{ft.ai.token.title}</h3>
        <p class="text-sm text-slate-400 mb-4">{ft.ai.token.desc}</p>
        <div class="text-xs font-mono text-accent mt-2">{ft.ai.tokenOptimizer}</div>
      </div>
    </div>
  </div>

  <!-- Benchmark + Architecture -->
  <div class="grid grid-cols-1 xl:grid-cols-2 gap-12 mt-24">
    <div>
      <h3 class="text-xl font-bold text-white mb-6 flex items-center gap-2">
        <span class="material-symbols-outlined text-slate-400">speed</span>
        {ft.benchTitle}
      </h3>
      <div class="overflow-hidden rounded-xl border border-white/10 bg-[#151520]">
        <table class="w-full text-left text-sm font-mono">
          <thead class="bg-white/5 text-slate-300">
            <tr>
              <th class="px-6 py-4 font-medium">Operation</th>
              <th class="px-6 py-4 font-medium">Metric</th>
              <th class="px-6 py-4 font-medium text-right">Value</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-white/5 text-slate-400">
            {ft.benchmarks.map((b: any) => (
              <tr class="hover:bg-white/5 transition-colors">
                <td class="px-6 py-4">{b.op}</td>
                <td class="px-6 py-4">{b.metric}</td>
                <td class={`px-6 py-4 text-right ${b.color}`}>{b.value}</td>
              </tr>
            ))}
          </tbody>
        </table>
      </div>
    </div>
    <div class="flex flex-col h-full">
      <h3 class="text-xl font-bold text-white mb-6 flex items-center gap-2">
        <span class="material-symbols-outlined text-slate-400">schema</span>
        {ft.archTitle}
      </h3>
      <div class="flex-1 bg-surface-dark rounded-xl border border-white/10 p-8 relative flex flex-col justify-end items-center overflow-hidden">
        <div class="relative z-10 grid grid-cols-4 gap-2 w-full mb-12">
          {ft.archPillars.map((name: string, i: number) => {
            const colors = ['blue', 'purple', 'accent', 'green'];
            const c = colors[i];
            return (
              <div class="text-center">
                <div class={`bg-${c}-500/20 text-${c}-300 border border-${c}-500/30 rounded px-2 py-3 text-xs font-mono font-bold`}>{name}</div>
                <div class={`h-8 w-px bg-${c}-500/30 mx-auto mt-1`}></div>
              </div>
            );
          })}
        </div>
        <div class="relative z-10 w-3/4">
          <div class="storage-layer rounded-lg p-6 text-center mb-2">
            <div class="text-white font-bold tracking-widest text-lg">LSM-TREE</div>
            <div class="text-xs text-slate-400 font-mono mt-1">{ft.archDesc}</div>
          </div>
          <div class="grid grid-cols-3 gap-2">
            {ft.archLayers.map((layer: string) => (
              <div class="bg-white/5 border border-white/10 rounded p-2 text-center text-[10px] text-slate-500 font-mono">{layer}</div>
            ))}
          </div>
        </div>
        <div class="absolute bottom-0 left-0 w-full h-1 bg-gradient-to-r from-primary via-secondary to-accent"></div>
      </div>
    </div>
  </div>

  <!-- CTA -->
  <div class="mt-24 text-center py-16 bg-gradient-to-b from-transparent to-surface-lighter rounded-3xl border border-white/5">
    <h2 class="text-3xl font-bold text-white mb-6">{ft.cta}</h2>
    <div class="flex justify-center gap-4">
      <a href={p('/quickstart')} class="h-12 px-8 rounded-lg bg-primary hover:bg-primary/90 text-white font-bold shadow-lg shadow-primary/25 transition-all flex items-center">{ft.ctaStart}</a>
      <a href={p('/sdk')} class="h-12 px-8 rounded-lg bg-[#151520] border border-white/10 text-white hover:bg-white/5 transition-all flex items-center">{ft.ctaDocs}</a>
    </div>
  </div>
</main>
