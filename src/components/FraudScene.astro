---
import { getLocaleFromUrl, getTranslations, getLocalizedPath, getDocsUrl } from '../i18n';

const locale = getLocaleFromUrl(Astro.url);
const t = getTranslations(locale);
const fr = t.fraudPage;
const p = (path: string) => getLocalizedPath(path, locale);
const docsUrl = getDocsUrl('/engines/kv', locale);
---

<style>
  .glass-panel { background: rgba(15, 15, 18, 0.7); backdrop-filter: blur(12px); border: 1px solid rgba(220, 38, 38, 0.15); }
  .flow-line { background: linear-gradient(90deg, transparent, #dc2626, transparent); background-size: 200% 100%; animation: shimmer 2s infinite linear; }
  @keyframes shimmer { 0% { background-position: 100% 0; } 100% { background-position: -100% 0; } }
</style>

<main class="relative pt-32 pb-12 min-h-screen flex flex-col">
  <div class="absolute inset-0 bg-grid-pattern cyber-grid opacity-10 pointer-events-none"></div>
  <div class="absolute inset-0 pointer-events-none" style="background: radial-gradient(circle at center, rgba(220, 38, 38, 0.1) 0%, rgba(5, 5, 5, 0) 70%);"></div>

  <div class="relative z-10 container mx-auto px-4 max-w-[1600px] flex-1 flex flex-col gap-6">
    <!-- Breadcrumb -->
    <div class="flex items-center gap-2 text-sm text-slate-400">
      <a class="hover:text-primary transition-colors" href={p('/use-cases')}>{fr.breadcrumb}</a>
      <span class="material-symbols-outlined text-xs">chevron_right</span>
      <span class="text-white">{fr.breadcrumbSub}</span>
    </div>

    <!-- Header Stats -->
    <div class="flex flex-col md:flex-row justify-between items-end gap-6 border-b border-white/5 pb-6">
      <div>
        <h1 class="text-3xl font-bold text-white mb-2 flex items-center gap-3">
          {fr.title}
          <span class="px-2 py-0.5 rounded text-[10px] font-mono bg-red-500/10 text-red-500 border border-red-500/20">{fr.version}</span>
        </h1>
        <p class="text-slate-400 text-sm max-w-xl">{fr.subtitle}</p>
      </div>
      <div class="flex gap-8">
        <div class="text-right">
          <div class="text-xs text-slate-500 uppercase font-mono mb-1">{fr.avgLatency}</div>
          <div class="text-2xl font-mono font-bold text-white flex items-center justify-end gap-2">
            <span class="text-red-500">&lt;</span> 0.8 ms
          </div>
        </div>
        <div class="text-right">
          <div class="text-xs text-slate-500 uppercase font-mono mb-1">{fr.throughput}</div>
          <div class="text-2xl font-mono font-bold text-white">124,502 <span class="text-xs text-slate-500 font-normal">TPS</span></div>
        </div>
        <div class="text-right">
          <div class="text-xs text-slate-500 uppercase font-mono mb-1">{fr.blocked}</div>
          <div class="text-2xl font-mono font-bold text-red-500">1,042</div>
        </div>
      </div>
    </div>

    <!-- Main Content -->
    <div class="grid grid-cols-1 lg:grid-cols-12 gap-6 h-[calc(100vh-280px)] min-h-[600px]">
      <!-- Event Stream -->
      <div class="lg:col-span-3 glass-panel rounded-xl overflow-hidden flex flex-col">
        <div class="p-4 border-b border-white/5 bg-surface-lighter/50 flex justify-between items-center">
          <h3 class="font-mono text-sm text-slate-300 font-semibold flex items-center gap-2">
            <span class="material-symbols-outlined text-sm text-red-500">rss_feed</span>
            {fr.streamTitle}
          </h3>
          <span class="text-[10px] text-slate-500 font-mono">BUFFER: 12ms</span>
        </div>
        <div class="flex-1 overflow-hidden relative">
          <div class="absolute inset-0 bg-gradient-to-b from-transparent via-transparent to-[#0f0f12] pointer-events-none z-10"></div>
          <div class="p-4 space-y-3 overflow-y-auto h-full font-mono text-xs">
            <div class="flex gap-3 items-start opacity-40">
              <span class="text-slate-600">14:02:44.021</span>
              <div class="flex-1">
                <div class="text-slate-400">LOGIN_ATTEMPT</div>
                <div class="text-slate-600 text-[10px]">ID: user_8821 • IP: 192.168.1.1</div>
              </div>
              <span class="text-green-500">PASS</span>
            </div>
            <div class="flex gap-3 items-start opacity-60">
              <span class="text-slate-600">14:02:44.150</span>
              <div class="flex-1">
                <div class="text-slate-400">PAYMENT_INIT</div>
                <div class="text-slate-600 text-[10px]">ID: tx_9923 • AMT: $50.00</div>
              </div>
              <span class="text-green-500">PASS</span>
            </div>
            <div class="flex gap-3 items-start p-2 bg-red-950/10 border border-red-900/30 rounded">
              <span class="text-red-400/70">14:02:44.205</span>
              <div class="flex-1">
                <div class="text-red-300 font-bold">WITHDRAWAL</div>
                <div class="text-red-400/50 text-[10px]">ID: tx_9924 • AMT: $5,000.00</div>
              </div>
              <span class="text-red-500 font-bold animate-pulse">BLOCK</span>
            </div>
            <div class="flex gap-3 items-start">
              <span class="text-slate-500">14:02:44.240</span>
              <div class="flex-1">
                <div class="text-slate-300">API_REQUEST</div>
                <div class="text-slate-500 text-[10px]">ID: api_1102 • EP: /v1/user</div>
              </div>
              <span class="text-green-500">PASS</span>
            </div>
            <div class="flex gap-3 items-start">
              <span class="text-slate-500">14:02:44.312</span>
              <div class="flex-1">
                <div class="text-slate-300">LOGIN_ATTEMPT</div>
                <div class="text-slate-500 text-[10px]">ID: user_4412 • IP: 10.0.0.5</div>
              </div>
              <span class="text-green-500">PASS</span>
            </div>
            <div class="flex gap-3 items-start p-2 bg-red-950/10 border border-red-900/30 rounded">
              <span class="text-red-400/70">14:02:44.355</span>
              <div class="flex-1">
                <div class="text-red-300 font-bold">DEVICE_CHANGE</div>
                <div class="text-red-400/50 text-[10px]">ID: user_7712 • LOC: UNKNOWN</div>
              </div>
              <span class="text-red-500 font-bold animate-pulse">FLAG</span>
            </div>
            <div class="flex gap-3 items-start opacity-80">
              <span class="text-slate-500">14:02:44.401</span>
              <div class="flex-1">
                <div class="text-slate-300">PAYMENT_INIT</div>
                <div class="text-slate-500 text-[10px]">ID: tx_9925 • AMT: $12.50</div>
              </div>
              <span class="text-green-500">PASS</span>
            </div>
          </div>
        </div>
      </div>

      <!-- Pipeline Flow -->
      <div class="lg:col-span-9 glass-panel rounded-xl p-8 relative overflow-hidden flex flex-col justify-center">
        <div class="absolute inset-0 z-0" style="background-image: linear-gradient(rgba(255, 255, 255, 0.03) 1px, transparent 1px), linear-gradient(90deg, rgba(255, 255, 255, 0.03) 1px, transparent 1px); background-size: 50px 50px;"></div>

        <div class="relative z-10 flex flex-col md:flex-row items-center justify-between gap-4 h-full w-full">
          {fr.pipeline.map((step: { title: string; desc: string; sub: string }, i: number) => (
            <>
              <div class="flex flex-col items-center gap-4 w-48 group">
                <div class={`relative w-24 h-24 ${i === 2 ? 'rounded-full bg-gradient-to-b from-surface-lighter to-surface-dark border-2 border-red-600 shadow-[0_0_50px_rgba(220,38,38,0.3)]' : 'rounded-xl bg-surface-lighter border border-white/10 shadow-[0_0_30px_rgba(0,0,0,0.5)]'} flex items-center justify-center group-hover:border-red-500/50 transition-all`}>
                  <span class="material-symbols-outlined text-4xl text-slate-300 group-hover:text-red-400 transition-colors">
                    {i === 0 ? 'touch_app' : i === 1 ? 'memory' : i === 2 ? 'gpp_maybe' : 'database'}
                  </span>
                  <div class="absolute -top-2 -right-2 w-6 h-6 bg-surface-dark border border-white/20 rounded-full flex items-center justify-center">
                    <span class="text-[10px] text-white">{i + 1}</span>
                  </div>
                </div>
                <div class="text-center">
                  <h3 class="text-white font-bold mb-1">{step.title}</h3>
                  <p class="text-xs text-slate-500 font-mono">{step.desc}</p>
                  <div class="mt-2 inline-flex items-center gap-1 px-2 py-0.5 rounded bg-blue-500/10 border border-blue-500/20">
                    <span class="text-[10px] text-blue-400 font-mono">{step.sub}</span>
                  </div>
                </div>
              </div>
              {i < 3 && (
                <>
                  <div class="hidden md:flex flex-1 h-[2px] bg-slate-800 relative overflow-hidden">
                    <div class="absolute inset-0 w-1/2 flow-line" style={`animation-delay: ${i * 0.5}s`}></div>
                  </div>
                  <div class="md:hidden h-12 w-[2px] bg-slate-800"></div>
                </>
              )}
            </>
          ))}
        </div>

        <!-- Logic Path -->
        <div class="absolute bottom-6 right-6 w-64 p-4 rounded-lg bg-black/60 border border-white/10 backdrop-blur-sm hidden lg:block">
          <div class="flex items-center gap-2 mb-3 border-b border-white/5 pb-2">
            <span class="material-symbols-outlined text-sm text-slate-400">account_tree</span>
            <span class="text-xs font-bold text-slate-300 uppercase">{fr.logicTitle}</span>
          </div>
          <div class="space-y-2 relative">
            <div class="absolute left-[5px] top-2 bottom-2 w-[1px] bg-slate-800"></div>
            {fr.logicItems.map((item: string, i: number) => (
              <div class="flex items-center gap-2 pl-4 relative">
                <div class="absolute left-[5px] top-1/2 w-3 h-[1px] bg-slate-800"></div>
                <span class={`w-2 h-2 rounded-full ${i === 3 ? 'bg-red-500 animate-pulse' : 'bg-green-500'}`}></span>
                <span class={`text-[10px] ${i === 3 ? 'text-white font-bold' : 'text-slate-400'}`}>{item}</span>
              </div>
            ))}
          </div>
        </div>
      </div>
    </div>

    <!-- CTA -->
    <div class="mt-4 rounded-3xl bg-gradient-to-r from-primary/20 via-surface-dark to-surface-dark border border-white/10 p-8 md:p-12 relative overflow-hidden">
      <div class="absolute top-0 right-0 w-1/2 h-full bg-gradient-to-l from-primary/10 to-transparent pointer-events-none"></div>
      <div class="relative z-10 flex flex-col md:flex-row justify-between items-center gap-8">
        <div class="max-w-xl">
          <h2 class="text-2xl md:text-3xl font-bold text-white mb-3">{fr.cta}</h2>
        </div>
        <div class="flex gap-4">
          <a class="px-6 py-3 rounded-lg bg-white text-slate-900 font-bold hover:bg-slate-200 transition-colors" href={p('/download')}>{fr.ctaStart}</a>
          <a class="px-6 py-3 rounded-lg border border-white/20 text-white font-medium hover:bg-white/5 transition-colors" href={docsUrl} target="_blank" rel="noopener">{fr.ctaDocs}</a>
        </div>
      </div>
    </div>
  </div>
</main>
