---
import { getLocaleFromUrl, getTranslations, getLocalizedPath, getDocsUrl } from '../i18n';

const locale = getLocaleFromUrl(Astro.url);
const t = getTranslations(locale);
const kg = t.knowledgeGraphPage;
const p = (path: string) => getLocalizedPath(path, locale);
const docsUrl = getDocsUrl('/engines/graph', locale);
---

<style>
  .connection-line { stroke-dasharray: 10; animation: dash 20s linear infinite; }
  @keyframes dash { to { stroke-dashoffset: -1000; } }
  .glass-panel { background: rgba(19, 17, 28, 0.7); backdrop-filter: blur(12px); border: 1px solid rgba(255, 255, 255, 0.08); }
  .node-glow { box-shadow: 0 0 15px currentColor; }
</style>

<main class="pt-32 pb-12 relative min-h-screen">
  <div class="absolute inset-0 bg-grid-pattern cyber-grid opacity-20 pointer-events-none"></div>
  <div class="absolute inset-0 bg-radial-glow pointer-events-none"></div>
  <div class="container mx-auto px-4 max-w-7xl relative z-10">
    <!-- Breadcrumb -->
    <div class="mb-12">
      <div class="flex items-center gap-2 text-sm text-slate-400 mb-6">
        <a class="hover:text-primary transition-colors" href={p('/use-cases')}>{kg.breadcrumb}</a>
        <span class="material-symbols-outlined text-xs">chevron_right</span>
        <span class="text-white">{kg.breadcrumbSub}</span>
      </div>
      <div class="flex flex-col md:flex-row justify-between items-start md:items-center gap-6">
        <div>
          <h1 class="text-4xl md:text-5xl font-bold text-white mb-2">{kg.title}</h1>
          <p class="text-slate-400 text-lg">{kg.subtitle}</p>
        </div>
        <div class="flex gap-3">
          <a href={p('/quickstart')} class="px-4 py-2 rounded-lg bg-primary hover:bg-primary/90 text-white text-sm font-medium shadow-lg shadow-primary/20">
            {kg.ctaStart}
          </a>
        </div>
      </div>
    </div>

    <!-- Main Grid: Graph + Info Cards -->
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8 mb-16">
      <!-- Graph Visualization -->
      <div class="lg:col-span-2 relative h-[600px] rounded-3xl border border-white/10 bg-[#08080c] overflow-hidden">
        <div class="absolute top-6 left-6 z-20 pointer-events-none">
          <div class="bg-surface-dark/90 backdrop-blur border border-white/10 rounded-lg p-3 inline-flex items-center gap-3 shadow-xl">
            <span class="relative flex h-3 w-3">
              <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-green-400 opacity-75"></span>
              <span class="relative inline-flex rounded-full h-3 w-3 bg-green-500"></span>
            </span>
            <div>
              <div class="text-xs text-slate-400 uppercase tracking-wider font-bold">{kg.graphTitle}</div>
              <div class="text-sm text-white font-mono">{kg.graphActive} â€¢ {kg.graphNodes}</div>
            </div>
          </div>
        </div>

        <svg class="absolute inset-0 w-full h-full pointer-events-none" style="z-index: 1;">
          <defs>
            <linearGradient id="edge-gradient" x1="0%" x2="100%" y1="0%" y2="0%">
              <stop offset="0%" style="stop-color:#3713ec;stop-opacity:0.2"></stop>
              <stop offset="50%" style="stop-color:#00f0ff;stop-opacity:0.6"></stop>
              <stop offset="100%" style="stop-color:#3713ec;stop-opacity:0.2"></stop>
            </linearGradient>
          </defs>
          <line class="connection-line" stroke="url(#edge-gradient)" stroke-width="1" x1="50%" x2="30%" y1="50%" y2="30%"></line>
          <line class="connection-line" stroke="url(#edge-gradient)" stroke-width="1" x1="50%" x2="70%" y1="50%" y2="35%"></line>
          <line class="connection-line" stroke="url(#edge-gradient)" stroke-width="1" x1="50%" x2="40%" y1="50%" y2="70%"></line>
          <line class="connection-line" stroke="url(#edge-gradient)" stroke-width="1" x1="50%" x2="65%" y1="50%" y2="65%"></line>
          <line stroke="rgba(255,255,255,0.1)" stroke-width="1" x1="30%" x2="20%" y1="30%" y2="50%"></line>
          <line stroke="rgba(255,255,255,0.1)" stroke-width="1" x1="70%" x2="80%" y1="35%" y2="20%"></line>
          <path class="animate-pulse" d="M 180 300 Q 300 300 450 300 T 700 250" fill="none" stroke="#00f0ff" stroke-dasharray="10" stroke-width="2">
            <animate attributeName="stroke-dashoffset" dur="2s" from="100" repeatCount="indefinite" to="0"></animate>
          </path>
        </svg>

        <div class="absolute inset-0 z-10">
          <!-- Central Node -->
          <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 flex flex-col items-center gap-2">
            <div class="w-16 h-16 rounded-full bg-surface-lighter border-2 border-accent shadow-[0_0_30px_rgba(0,240,255,0.4)] flex items-center justify-center relative z-10">
              <span class="material-symbols-outlined text-accent text-3xl">psychology</span>
            </div>
            <div class="bg-black/80 text-white text-xs px-3 py-1 rounded-full border border-accent/30 backdrop-blur-md font-mono">Query Intent</div>
            <div class="absolute inset-0 rounded-full border border-accent/20 scale-150 animate-ping"></div>
          </div>
          <!-- Entity Nodes -->
          <div class="absolute top-[30%] left-[30%] flex flex-col items-center gap-2">
            <div class="w-12 h-12 rounded-full bg-surface-lighter border border-primary shadow-[0_0_15px_rgba(55,19,236,0.5)] flex items-center justify-center">
              <span class="material-symbols-outlined text-white text-xl">dataset</span>
            </div>
            <div class="bg-black/60 text-slate-300 text-[10px] px-2 py-0.5 rounded border border-white/10 font-mono">Entity: Product</div>
          </div>
          <div class="absolute top-[35%] left-[70%] flex flex-col items-center gap-2">
            <div class="w-12 h-12 rounded-full bg-surface-lighter border border-purple-500 shadow-[0_0_15px_rgba(168,85,247,0.5)] flex items-center justify-center">
              <span class="material-symbols-outlined text-white text-xl">person</span>
            </div>
            <div class="bg-black/60 text-slate-300 text-[10px] px-2 py-0.5 rounded border border-white/10 font-mono">Entity: Customer</div>
          </div>
          <div class="absolute top-[70%] left-[40%] flex flex-col items-center gap-2">
            <div class="w-10 h-10 rounded-full bg-surface-lighter border border-orange-500 shadow-[0_0_15px_rgba(249,115,22,0.5)] flex items-center justify-center">
              <span class="material-symbols-outlined text-white text-lg">description</span>
            </div>
            <div class="bg-black/60 text-slate-300 text-[10px] px-2 py-0.5 rounded border border-white/10 font-mono">Doc Fragment</div>
          </div>
        </div>

        <!-- Bottom Stats -->
        <div class="absolute bottom-0 left-0 right-0 bg-gradient-to-t from-black via-black/80 to-transparent p-6 pt-12 z-20 flex justify-between items-end">
          <div class="flex gap-8">
            <div>
              <div class="text-[10px] text-slate-500 uppercase tracking-widest mb-1">BFS Depth</div>
              <div class="text-2xl font-mono text-white">3 <span class="text-sm text-slate-500">hops</span></div>
            </div>
            <div>
              <div class="text-[10px] text-slate-500 uppercase tracking-widest mb-1">Traversal Time</div>
              <div class="text-2xl font-mono text-accent">12<span class="text-sm text-slate-500">ms</span></div>
            </div>
            <div>
              <div class="text-[10px] text-slate-500 uppercase tracking-widest mb-1">Confidence</div>
              <div class="text-2xl font-mono text-green-400">98.2%</div>
            </div>
          </div>
          <div class="hidden sm:block">
            <div class="flex items-center gap-2 text-xs text-slate-400">
              <span class="w-2 h-2 rounded-full bg-accent"></span> Vector Match
              <span class="w-2 h-2 rounded-full bg-primary ml-2"></span> Direct Link
            </div>
          </div>
        </div>
      </div>

      <!-- Right Info Cards -->
      <div class="lg:col-span-1 flex flex-col gap-6">
        <div class="glass-panel p-6 rounded-2xl relative overflow-hidden group">
          <div class="absolute top-0 right-0 w-32 h-32 bg-primary/10 rounded-bl-full pointer-events-none transition-opacity group-hover:bg-primary/20"></div>
          <div class="flex items-start gap-4 mb-3">
            <div class="p-2 bg-primary/20 rounded-lg text-primary border border-primary/30">
              <span class="material-symbols-outlined">hub</span>
            </div>
            <div>
              <h3 class="text-white font-bold text-lg">{kg.gqlTitle}</h3>
              <p class="text-slate-400 text-sm mt-1 leading-relaxed">{kg.gqlDesc}</p>
            </div>
          </div>
        </div>
        <div class="glass-panel p-6 rounded-2xl relative overflow-hidden group">
          <div class="absolute top-0 right-0 w-32 h-32 bg-accent/10 rounded-bl-full pointer-events-none transition-opacity group-hover:bg-accent/20"></div>
          <div class="flex items-start gap-4 mb-3">
            <div class="p-2 bg-accent/10 rounded-lg text-accent border border-accent/20">
              <span class="material-symbols-outlined">travel_explore</span>
            </div>
            <div>
              <h3 class="text-white font-bold text-lg">{kg.semanticTitle}</h3>
              <p class="text-slate-400 text-sm mt-1 leading-relaxed">{kg.semanticDesc}</p>
            </div>
          </div>
        </div>
        <!-- Code Block -->
        <div class="glass-panel rounded-2xl overflow-hidden flex-1 border border-white/10 flex flex-col">
          <div class="bg-[#1e1e24] px-4 py-2 border-b border-white/5 flex items-center justify-between">
            <span class="text-xs text-slate-400 font-mono">query.js</span>
            <div class="flex gap-1.5">
              <div class="w-2.5 h-2.5 rounded-full bg-red-500/20 border border-red-500/50"></div>
              <div class="w-2.5 h-2.5 rounded-full bg-yellow-500/20 border border-yellow-500/50"></div>
              <div class="w-2.5 h-2.5 rounded-full bg-green-500/20 border border-green-500/50"></div>
            </div>
          </div>
          <div class="p-4 bg-[#0d0d10] flex-1 overflow-x-auto">
            <pre class="text-xs font-mono leading-relaxed"><code><span class="text-purple-400">const</span> <span class="text-blue-400">results</span> = <span class="text-purple-400">await</span> db.<span class="text-yellow-300">graph</span>()
  .<span class="text-blue-300">find</span>({"{"} <span class="text-orange-300">vector</span>: queryEmbedding {"}"})
  .<span class="text-blue-300">bfs</span>({"{"}<br/>    <span class="text-orange-300">maxDepth</span>: <span class="text-green-300">3</span>,<br/>    <span class="text-orange-300">edgeFilter</span>: (e) =&gt; e.weight &gt; <span class="text-green-300">0.8</span><br/>  {"}"})
  .<span class="text-blue-300">map</span>(node =&gt; node.<span class="text-blue-300">properties</span>);</code></pre>
          </div>
        </div>
      </div>
    </div>

    <!-- Stats -->
    <div class="grid grid-cols-2 md:grid-cols-4 gap-4 mb-16">
      {kg.stats.map((s: { value: string; label: string }) => (
        <div class="bento-card p-5 rounded-xl border border-white/5">
          <div class="text-slate-400 text-xs uppercase mb-2">{s.label}</div>
          <div class="text-2xl font-bold text-white">{s.value}</div>
        </div>
      ))}
    </div>

    <!-- CTA -->
    <div class="rounded-3xl bg-gradient-to-r from-primary/20 via-surface-dark to-surface-dark border border-white/10 p-8 md:p-12 relative overflow-hidden">
      <div class="absolute top-0 right-0 w-1/2 h-full bg-gradient-to-l from-primary/10 to-transparent pointer-events-none"></div>
      <div class="relative z-10 flex flex-col md:flex-row justify-between items-center gap-8">
        <div class="max-w-xl">
          <h2 class="text-2xl md:text-3xl font-bold text-white mb-3">{kg.cta}</h2>
        </div>
        <div class="flex gap-4">
          <a class="px-6 py-3 rounded-lg bg-white text-slate-900 font-bold hover:bg-slate-200 transition-colors" href={p('/download')}>{kg.ctaStart}</a>
          <a class="px-6 py-3 rounded-lg border border-white/20 text-white font-medium hover:bg-white/5 transition-colors" href={docsUrl} target="_blank" rel="noopener">{kg.ctaDocs}</a>
        </div>
      </div>
    </div>
  </div>
</main>
