---
import { getLocaleFromUrl, getTranslations, getLocalizedPath, getAltPath } from '../i18n';

const locale = getLocaleFromUrl(Astro.url);
const t = getTranslations(locale);
const altLabel = locale === 'zh' ? 'EN' : '中文';
const altPath = getAltPath(Astro.url, locale);
const p = (path: string) => getLocalizedPath(path, locale);

const base = import.meta.env.BASE_URL.replace(/\/$/, '');
const pathname = Astro.url.pathname.replace(base, '').replace(/^\/en/, '') || '/';
const isActive = (path: string) => {
  if (path === '/') return pathname === '/';
  return pathname.startsWith(path);
};

const navLinks = [
  { href: '/platform', label: t.nav.platform },
  { href: '/engines', label: t.nav.engines },
  { href: '/use-cases', label: t.nav.useCases },
  { href: '/sdk', label: t.nav.sdk },
  { href: '/pricing', label: t.nav.pricing },
  { href: '/quickstart', label: t.nav.quickstart },
];
---

<header class="fixed top-0 left-0 w-full z-50 border-b border-white/10 bg-[#0a0a0f]/80 backdrop-blur-md">
  <div class="max-w-7xl mx-auto px-6 h-16 flex items-center justify-between">
    <a href={p('/')} class="flex items-center gap-3">
      <div class="w-8 h-8 text-primary">
        <svg class="w-full h-full" fill="none" viewBox="0 0 48 48" xmlns="http://www.w3.org/2000/svg">
          <path d="M24 4C25.7818 14.2173 33.7827 22.2182 44 24C33.7827 25.7818 25.7818 33.7827 24 44C22.2182 33.7827 14.2173 25.7818 4 24C14.2173 22.2182 22.2182 14.2173 24 4Z" fill="currentColor" />
        </svg>
      </div>
      <span class="text-xl font-bold tracking-tight text-white">Talon</span>
    </a>

    <nav class="hidden lg:flex items-center gap-6">
      {navLinks.map(link => (
        <a class={`text-sm font-medium transition-colors ${isActive(link.href) ? 'text-white' : 'text-slate-300 hover:text-white'}`} href={p(link.href)}>
          {link.label}
          {isActive(link.href) && <span class="block h-0.5 bg-primary mt-0.5 rounded-full shadow-[0_0_6px_rgba(55,19,236,0.8)]"></span>}
        </a>
      ))}
    </nav>

    <!-- Mobile menu button -->
    <button id="mobile-menu-btn" class="lg:hidden flex items-center justify-center w-9 h-9 rounded-lg border border-white/10 text-slate-300 hover:text-white hover:bg-white/5 transition-colors" aria-label="Menu">
      <span class="material-symbols-outlined text-xl">menu</span>
    </button>

    <div class="hidden lg:flex items-center gap-3">
      <a href={altPath} class="hidden sm:flex h-9 items-center px-3 rounded-lg border border-white/10 text-sm font-medium text-slate-300 hover:text-white hover:bg-white/5 transition-colors">
        {altLabel}
      </a>
      <a href={p('/download')} class="hidden sm:flex h-9 items-center px-4 rounded-lg bg-surface-lighter border border-white/10 text-sm font-medium text-white hover:bg-white/5 transition-colors">
        {t.nav.download}
      </a>
      <a href={p('/quickstart')} class="h-9 flex items-center px-4 rounded-lg bg-primary hover:bg-primary/90 text-sm font-medium text-white shadow-[0_0_15px_rgba(55,19,236,0.5)] transition-all">
        {t.nav.getStarted}
      </a>
    </div>
  </div>

  <!-- Mobile menu overlay -->
  <div id="mobile-menu" class="hidden lg:hidden fixed top-16 left-0 w-full h-[calc(100vh-4rem)] bg-[#0a0a0f] border-b border-white/10 overflow-y-auto">
    <nav class="flex flex-col px-6 py-4 space-y-1">
      {navLinks.map(link => (
        <a class={`px-4 py-3 rounded-lg text-sm font-medium transition-colors ${isActive(link.href) ? 'text-white bg-primary/10 border-l-2 border-primary' : 'text-slate-300 hover:text-white hover:bg-white/5'}`} href={p(link.href)}>
          {link.label}
        </a>
      ))}
      <div class="border-t border-white/5 pt-3 mt-2 flex flex-col gap-2">
        <a href={altPath} class="px-4 py-3 rounded-lg text-sm font-medium text-slate-300 hover:text-white hover:bg-white/5 transition-colors">
          {altLabel}
        </a>
        <a href={p('/download')} class="px-4 py-3 rounded-lg text-sm font-medium text-slate-300 hover:text-white hover:bg-white/5 transition-colors">
          {t.nav.download}
        </a>
        <a href={p('/quickstart')} class="px-4 py-3 rounded-lg bg-primary hover:bg-primary/90 text-sm font-medium text-white text-center shadow-[0_0_15px_rgba(55,19,236,0.5)] transition-all">
          {t.nav.getStarted}
        </a>
      </div>
    </nav>
  </div>
</header>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const btn = document.getElementById('mobile-menu-btn');
    const menu = document.getElementById('mobile-menu');
    if (btn && menu) {
      btn.addEventListener('click', () => {
        menu.classList.toggle('hidden');
        const icon = btn.querySelector('span');
        if (icon) icon.textContent = menu.classList.contains('hidden') ? 'menu' : 'close';
      });
    }
  });
</script>
